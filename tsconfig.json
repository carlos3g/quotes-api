{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],

    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": "src",

    "allowJs": true,

    "outDir": "dist",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true
  }
}
