{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],

    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": "src",

    "allowJs": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "removeComments": true,
    "paths": {
      "~/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true
  },
  "exclude": ["dist", ".eslintrc.js", "commitlint.config.js"]
}
